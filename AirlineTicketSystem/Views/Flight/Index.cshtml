﻿@using AirlineTicketSystem.Models.Flight
﻿@using AirlineTicketSystem.Data.Constants

@model IEnumerable<FlightViewModel>
@{
    var isAdmin = User.IsInRole("Admin");
    var isOperator = User.IsInRole("Operator");
}

@{
    ViewData["Title"] = "Flights";
}

    <h2>Flights</h2>
    <form asp-controller="Flight">
        <p>
            Departure City: <input type="text" name="SearchDepartureCity" />
            <input type="submit" value="Filter" asp-action="Index" method="get" />
            <input type="submit" value="Reset" asp-action="Reset" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Departure City</th>
                <th>Arrival City</th>
                <th>Duration</th>
                <th>Price</th>
                <th>Capacity</th>
                <th>Is Full</th>

                @if (isAdmin)
                {
                <th>
                    Actions</th>
                }
</tr>
</thead>

<tbody>





@foreach (var flight in Model)
    {
    <tr>
        <th>@flight.Id</th>
            <th>@flight.DepartureCity</th>
            <th>@flight.ArrivalCity</th>
            <th>@flight.Duration</th>
            <th>@flight.Price</th>
                <th>@flight.Capacity</th>
             @if (!@flight.IsFullyBooked)
            {
            <th>not full</th>
            }
            else
            {
            <th class="full">full</th>
            }

             @if (User.Identity?.IsAuthenticated ?? false)
            {
            <th>
                @if (!@flight.IsFullyBooked && (isAdmin || isOperator))
                {
                <button>
                    <a asp-controller="Flight"
                       asp-action="BookSeat"
                       asp-route-id="@flight.Id">
                        Book Seat
                    </a>
                </button>
            }

            @if (isAdmin)
                {
            <button>
                <a asp-controller="Flight"
                   asp-action="Edit"
                   asp-route-id="@flight.Id">
                    Edit
                </a>
            </button>
            <button>
                <a asp-controller="Flight"
                   asp-action="Delete"
                   asp-route-id="@flight.Id">
                    Delete
                </a>
            </button>
            }
            </th>
            }
    </tr>
}
</tbody>
</table>