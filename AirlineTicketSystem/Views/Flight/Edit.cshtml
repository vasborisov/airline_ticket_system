@model AirlineTicketSystem.Models.Flight.FlightViewModel
@{
    var isAdmin = User.IsInRole("Admin");
}

@{
    ViewData["Title"] = "Edit Flight";
}

@if (isAdmin)
{
    <img class="img_deg" src="~/photo/flight_logo.jpg" />
    <div class="container-form">
        <h2>Edit Flight</h2>

        <form method="post" asp-controller="Flight" asp-action="Edit" asp-route-id="@Model.Id">
            <div>
                <label>Flight Number</label>
                <input type="text" name="Id" value="@Model.Id" readonly />
            </div>
            <div>
                <label for="DepartureCity">Departure City</label>
                <input type="text" name="DepartureCity" value="@Model.DepartureCity" />
            </div>
            <div>
                <label for="ArrivalCity">Arrival City</label>
                <input type="text" name="ArrivalCity" value="@Model.ArrivalCity" />
            </div>
            <div>
                <label for="Duration">Duration</label>
                <input type="number" name="Duration" value="@Model.Duration" />
            </div>
            <div>
                <label for="Price">Price</label>
                <input type="text" name="Price" value="@Model.Price" />
            </div>
            <div>
                <label for="Capacity">Capacity</label>
                <input type="number" name="Capacity" value="@Model.Capacity" readonly />
            </div>

            <button type="submit">Edit</button>
            <button asp-controller="Flight" asp-action="Index" id="cancelButton">Cancel</button>
        </form>
    </div>
}
else
{
    <h2 class="text-danger">
        You can't accesss this page if you aren't logged in.
    </h2>
}